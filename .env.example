# OpenAI Configuration
OPENAI_API_KEY=sk-...                         # Your OpenAI API key (required)

# Redis Configuration  
REDIS_URL=redis://localhost:6379              # Redis connection string

# Application Configuration
ENVIRONMENT=development                        # Environment: development|production
LOG_LEVEL=info                                # Logging level: debug|info|warning|error
MAX_UPLOAD_SIZE=52428800                      # Maximum file upload size (50MB in bytes)
SESSION_TIMEOUT=3600                          # Session timeout in seconds (1 hour)

# Rate Limiting
RATE_LIMIT_REQUESTS=30                        # Maximum requests per time window
RATE_LIMIT_WINDOW=60                          # Rate limit time window in seconds

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000"]        # Allowed CORS origins (JSON array format)

# Optional: Development Settings
DEBUG=false                                   # Enable debug mode
FRONTEND_URL=http://localhost:3000            # Frontend URL for development
BACKEND_URL=http://localhost:8000             # Backend URL for development